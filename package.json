{
  "name": "bonfhir-hackaton",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NEXTAUTH_URL=http://localhost:3000 next dev",
    "build": "next build",
    "start": "next start",
    "check": "prettier --check ./src && next lint && tsc --noEmit",
    "format": "prettier --write ./src",
    "start-fhir-server": "docker run -p 8100:8100 -p 8103:8103 -v bonfhir-hackaton_fhir_data:/var/lib/postgresql/15/main -v bonfhir-hackaton_fhir_files:/usr/src/medplum/packages/server/dist/binary -e INITIAL_CLIENT_APP_REDIRECT_URI=http://localhost:3000/api/auth/callback/medplum --name bonfhir-hackaton_fhir_server --rm -d ghcr.io/bonfhir/medplum-devbox:v2.1.4",
    "stop-fhir-server": "docker stop bonfhir-hackaton_fhir_server",
    "add-sample-data": "npx @bonfhir/cli import --source synthea-sample --fhir r4b --base-url http://localhost:8103/fhir/R4/ --auth-token-url http://localhost:8103/oauth2/token --auth-client-id f54370de-eaf3-4d81-a17e-24860f667912 --auth-client-secret 75d8e7d06bf9283926c51d5f461295ccf0b69128e983b6ecdd5a9c07506895de",
    "register-subscriptions": "curl -i --request POST 'http://localhost:3000/api/fhir/subscriptions/register' --header 'X-Subscription-Auth: secret'",
    "prepare": "husky install"
  },
  "homepage": "TBD",
  "bugs": {
    "url": "https://github.com/AlleyCorpNord/bonfhir-hackaton/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlleyCorpNord/bonfhir-hackaton"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ]
  },
  "dependencies": {
    "@bonfhir/core": "^2.16.1",
    "@bonfhir/mantine": "^3.0.0",
    "@bonfhir/next": "^2.4.0",
    "@bonfhir/query": "^2.5.0",
    "@bonfhir/react": "^2.7.0",
    "@bonfhir/subscriptions": "^2.3.0",
    "@mantine/core": "^7.2.2",
    "@mantine/dates": "^7.2.2",
    "@mantine/form": "^7.2.2",
    "@mantine/hooks": "^7.2.2",
    "@mantine/modals": "^7.2.2",
    "@mantine/notifications": "^7.2.2",
    "@mantine/tiptap": "^7.2.2",
    "@tabler/icons-react": "^2.40.0",
    "@tanstack/react-query": "^4.36.1",
    "@tanstack/react-query-devtools": "^4.36.1",
    "next": "^14.0.2",
    "next-auth": "^4.24.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.2",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.31",
    "postcss-preset-mantine": "^1.11.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.17.1"
  }
}
